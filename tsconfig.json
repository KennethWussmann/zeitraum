{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "module": "NodeNext",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"],
    "lib": ["ES2022"],
    "outDir": "./build",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "exclude": ["node_modules"]
}
